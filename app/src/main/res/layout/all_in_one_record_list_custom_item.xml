                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Title"-->
                            <!--android:textSize="@dimen/default_font_size"-->
                            <!--android:textColor="@color/dark_gray"-->
                            <!--android:gravity="center"-->
                            <!--/>-->

                    <!--</TableRow>-->

                </TableLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>